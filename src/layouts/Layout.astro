---
import "../css/reset.css";

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Jamie John | {title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --base-font-size: 10px;

    --size-heading-1: 3.5rem;
    --size-heading-2: 2rem;
    --size-paragraph: 1.6rem;

    --text-line-height: 2;

    --gutter: 2rem;
  }

  html {
    font-size: var(--base-font-size);
  }

  body {
    font-family: "Times New Roman", Times, serif, system-ui, -apple-system,
      BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell,
      "Open Sans", "Helvetica Neue", sans-serif;
    line-height: 1.5;

    height: 100vh;
    max-width: 700px;
    margin: auto;

    box-shadow: 1px 1px 20px rgba(0, 0, 0, 0.1);

    padding: var(--gutter);
  }

  h1 {
    font-size: var(--size-heading-1);
  }

  h2 {
    font-size: var(--size-heading-2);
  }

  p {
    font-size: var(--size-paragraph);
    line-height: var(--text-line-height);
  }
</style>
