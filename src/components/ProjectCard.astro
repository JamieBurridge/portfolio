---
import { languagesIcons } from "../helpers/languages";

interface Props {
  heading: string;
  description: string;
  link?: string;
  languagesUsed?: string[];
}

const { heading, description, link, languagesUsed } = Astro.props;
---

<div class="project-card">
  <h5>
    <a href={link} target="_blank">
      {heading}
    </a>
  </h5>
  <p>{description}</p>

  <div class="icons-container">
    {
      languagesIcons
        .filter((langIcon) => languagesUsed?.includes(langIcon.language))
        .map((language) => <div class="icon" set:html={language.icon} />)
    }
  </div>
</div>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    gap: 1rem;

    border: 1px solid #000;
    padding: 1rem;
  }

  .project-card h5 {
    font-size: 2.5rem;
    font-family: "Times New Roman", Times, serif;
  }

  .project-card p {
    font-size: 1.5rem;
    line-height: 1.5;
  }

  .icons-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(25px, 30px));
    gap: 1rem;
  }
</style>
